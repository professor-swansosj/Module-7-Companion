<?xml version="1.0" encoding="UTF-8"?>
<network_inventory>
    <metadata>
        <created_date>2024-10-12</created_date>
        <created_by>Network Administrator</created_by>
        <organization>Florida State College at Jacksonville</organization>
        <purpose>Module 7 - Ansible Infrastructure as Code Lab</purpose>
    </metadata>
    
    <devices>
        <device>
            <hostname>SW01-ACCESS-A</hostname>
            <device_type>switch</device_type>
            <model>Catalyst 2960</model>
            <ios_version>15.2(7)E3</ios_version>
            <management_ip>192.168.1.10</management_ip>
            <location>Lab Room A</location>
            <serial_number>FCW2109G0LZ</serial_number>
            <vlans>
                <vlan id="10" name="STUDENT_LAB_A"/>
                <vlan id="20" name="FACULTY_A"/>
                <vlan id="99" name="MANAGEMENT"/>
            </vlans>
            <interfaces>
                <interface name="GigabitEthernet0/1" description="Trunk to Router" mode="trunk"/>
                <interface name="GigabitEthernet0/2" description="Student PC" mode="access" vlan="10"/>
                <interface name="GigabitEthernet0/3" description="Student PC" mode="access" vlan="10"/>
                <interface name="GigabitEthernet0/4" description="Faculty PC" mode="access" vlan="20"/>
            </interfaces>
        </device>
        
        <device>
            <hostname>SW02-ACCESS-B</hostname>
            <device_type>switch</device_type>
            <model>Catalyst 2960</model>
            <ios_version>15.2(7)E3</ios_version>
            <management_ip>192.168.1.11</management_ip>
            <location>Lab Room B</location>
            <serial_number>FCW2109G0M0</serial_number>
            <vlans>
                <vlan id="11" name="STUDENT_LAB_B"/>
                <vlan id="21" name="FACULTY_B"/>
                <vlan id="99" name="MANAGEMENT"/>
            </vlans>
            <interfaces>
                <interface name="GigabitEthernet0/1" description="Trunk to Router" mode="trunk"/>
                <interface name="GigabitEthernet0/2" description="Student PC" mode="access" vlan="11"/>
                <interface name="GigabitEthernet0/3" description="Student PC" mode="access" vlan="11"/>
                <interface name="GigabitEthernet0/4" description="Faculty PC" mode="access" vlan="21"/>
                <interface name="GigabitEthernet0/5" description="Printer" mode="access" vlan="21"/>
            </interfaces>
        </device>
        
        <device>
            <hostname>R01-MAIN-GW</hostname>
            <device_type>router</device_type>
            <model>ISR 4321</model>
            <ios_version>16.09.04</ios_version>
            <management_ip>192.168.1.1</management_ip>
            <location>Main Network Closet</location>
            <serial_number>FTX2204G123</serial_number>
            <interfaces>
                <interface name="GigabitEthernet0/0/0" description="WAN to ISP" ip="203.0.113.2/30"/>
                <interface name="GigabitEthernet0/0/1" description="LAN Trunk" ip="192.168.1.1/24"/>
                <interface name="GigabitEthernet0/0/1.10" description="VLAN 10" ip="192.168.10.1/24"/>
                <interface name="GigabitEthernet0/0/1.11" description="VLAN 11" ip="192.168.11.1/24"/>
                <interface name="GigabitEthernet0/0/1.20" description="VLAN 20" ip="192.168.20.1/24"/>
                <interface name="GigabitEthernet0/0/1.21" description="VLAN 21" ip="192.168.21.1/24"/>
                <interface name="GigabitEthernet0/0/1.99" description="VLAN 99" ip="192.168.99.1/24"/>
            </interfaces>
            <routing>
                <default_route gateway="203.0.113.1"/>
                <dhcp_pools>
                    <pool name="STUDENT_LAB_A" network="192.168.10.0/24" gateway="192.168.10.1"/>
                    <pool name="STUDENT_LAB_B" network="192.168.11.0/24" gateway="192.168.11.1"/>
                    <pool name="FACULTY_A" network="192.168.20.0/24" gateway="192.168.20.1"/>
                    <pool name="FACULTY_B" network="192.168.21.0/24" gateway="192.168.21.1"/>
                </dhcp_pools>
            </routing>
        </device>
    </devices>
    
    <network_topology>
        <connections>
            <connection>
                <from device="R01-MAIN-GW" interface="GigabitEthernet0/0/1"/>
                <to device="SW01-ACCESS-A" interface="GigabitEthernet0/1"/>
                <type>trunk</type>
                <vlans>10,20,99</vlans>
            </connection>
            <connection>
                <from device="R01-MAIN-GW" interface="GigabitEthernet0/0/1"/>
                <to device="SW02-ACCESS-B" interface="GigabitEthernet0/1"/>
                <type>trunk</type>
                <vlans>11,21,99</vlans>
            </connection>
        </connections>
        
        <subnets>
            <subnet network="192.168.10.0/24" vlan="10" description="Student Lab A"/>
            <subnet network="192.168.11.0/24" vlan="11" description="Student Lab B"/>
            <subnet network="192.168.20.0/24" vlan="20" description="Faculty A"/>
            <subnet network="192.168.21.0/24" vlan="21" description="Faculty B"/>
            <subnet network="192.168.99.0/24" vlan="99" description="Management"/>
            <subnet network="203.0.113.0/30" description="WAN Link"/>
        </subnets>
    </network_topology>
    
    <security_policies>
        <acl name="STUDENT_INTERNET">
            <rule action="permit" protocol="tcp" source="192.168.10.0/24" destination="any" port="80"/>
            <rule action="permit" protocol="tcp" source="192.168.10.0/24" destination="any" port="443"/>
            <rule action="permit" protocol="tcp" source="192.168.11.0/24" destination="any" port="80"/>
            <rule action="permit" protocol="tcp" source="192.168.11.0/24" destination="any" port="443"/>
            <rule action="deny" protocol="ip" source="192.168.10.0/24" destination="192.168.20.0/24"/>
            <rule action="deny" protocol="ip" source="192.168.11.0/24" destination="192.168.21.0/24"/>
            <rule action="permit" protocol="ip" source="any" destination="any"/>
        </acl>
        
        <acl name="SSH_ACCESS">
            <rule action="permit" protocol="tcp" source="192.168.0.0/16" destination="any" port="22"/>
            <rule action="permit" protocol="tcp" source="10.0.0.0/8" destination="any" port="22"/>
            <rule action="deny" protocol="ip" source="any" destination="any"/>
        </acl>
    </security_policies>
</network_inventory>